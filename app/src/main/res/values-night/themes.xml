<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.CompiComida" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/green_variant</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white_variant</item>
        <item name="colorSecondaryContainer">@color/white_variant</item>
        <item name="colorOnPrimary">@color/white_variant</item>
        <item name="colorOutlineVariant">?attr/colorOutline</item>
        <item name="colorSurface">#141218</item>

    </style>

    <style name="Theme.CompiComida" parent="Base.Theme.CompiComida" />

    <style name="Theme.CompiComida.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.CompiComida.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.CompiComida.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>